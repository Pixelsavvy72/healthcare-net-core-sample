@model HealthcareNetCoreSample.Models.Claim

@{
    ViewData["Title"] = "Create";
}

<h2>Create New Claim For: @ViewData["PatientName"]</h2>

<h4>Claim</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientID" class="control-label"></label>
                <input asp-for="PatientID" class ="form-control" value="@ViewBag.PatientID" readonly>

            </div>
            <div class="form-group">
                <label asp-for="InsProviderID" class="control-label"></label>
                <select asp-for="InsProviderID" class ="form-control" asp-items="ViewBag.InsProviderID"></select>
            </div>
            <div class="form-group">
                <label asp-for="AmountOwed" class="control-label"></label>
                <input asp-for="AmountOwed" class="form-control" />
                <span asp-validation-for="AmountOwed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaimStatus" class="control-label"></label>
                <select asp-for="ClaimStatus" class="form-control" asp-items="Html.GetEnumSelectList<ClaimStatus>()"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Patients" asp-action="Index">Back to Patients</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
