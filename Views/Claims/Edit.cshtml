@model HealthcareNetCoreSample.Models.Claim

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Claim</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClaimID" />
            <div class="form-group">
                <label asp-for="PatientID" class="control-label"></label>
                <select asp-for="PatientID" class="form-control" asp-items="ViewBag.PatientID"></select>
                <span asp-validation-for="PatientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsProviderID" class="control-label"></label>
                <select asp-for="InsProviderID" class="form-control" asp-items="ViewBag.InsProviderID"></select>
                <span asp-validation-for="InsProviderID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOwed" class="control-label"></label>
                <input asp-for="AmountOwed" class="form-control" />
                <span asp-validation-for="AmountOwed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaimStatus" class="control-label"></label>
                <input asp-for="ClaimStatus" class="form-control" />
                <span asp-validation-for="ClaimStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Patient Claims", "Details", "Patients", new { id = Model.PatientID })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
