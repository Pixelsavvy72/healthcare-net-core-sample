@model HealthcareNetCoreSample.Models.Claim

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Claim @Html.DisplayFor(model => model.ClaimID)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AmountOwed)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AmountOwed)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ClaimStatus)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClaimStatus)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.InsProvider)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InsProvider.InsProviderName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ClaimID">Edit</a> |
    @Html.ActionLink("Back to Patient Claims", "Details", "Patients", new { id = Model.PatientID })
</div>
